{
    "manifest_version": 3,
    "name": "Terry's Utilities",
    "version": "2.0",
    "description": "An all-in-one Chrome extension that comes with lightweight utilities!",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://returnyoutubedislikeapi.com/votes*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}